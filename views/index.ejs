<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="container" id="app">
      <div class="row justify-content-center align-items-center mt-5">
        <div class="col-12 col-md-8">
          <div class="card shadow p-4">
            <div class="card-body ma-4">
              <h3 class="text-center mb-5">Paste the URL to be shortened</h3>
              <div class="row">
                <div class="col-md-9 col-sm-12">
                  <input
                    type="text"
                    class="form-control form-control-lg"
                    placeholder="Enter the link here"
                    v-model="url"
                  />
                </div>
                <div class="col-md-3 col-sm-12">
                  <button
                    type="button"
                    class="btn btn-lg btn-primary"
                    @click="getShortenedUrl"
                  >
                    shorten
                  </button>
                </div>
              </div>
            </div>
          </div>
          <div class="alert alert-danger mt-5" role="alert" v-if="error">
            URL FORMAT IS WRONG
          </div>
        </div>

        <div class="col-12 col-md-8 mt-5" v-if="result">
          <div class="card shadow text-white bg-success p-4">
            <div class="card-body">
              <h3 class="text-center">URL shortened successfully</h3>
              <hr />
              <div
                class="row justify-content-space-between justify-space-between align-center mb-4"
              >
                <div class="col title">Generated code:</div>
                <div class="col value">
                  <a :href="result.url">
                    {{ result.code }}
                  </a>
                </div>
              </div>
              <div
                class="row justify-content-space-between justify-space-between align-center mb-4"
              >
                <div class="col title">original url:</div>
                <div class="col value">
                  <a :href="result.url">
                    {{ result.url }}
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://unpkg.com/vue/dist/vue.min.js"></script>
    <script>
      // when life is settled, load up the fun stuff
      document.addEventListener("DOMContentLoaded", function () {
        new Vue({
          el: "#app",
          data() {
            return {
              url: "",
              result: null,
              error: false,
            };
          },
          methods: {
            getShortenedUrl() {
              const data = { url: this.url };
              fetch("./create", {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
                body: JSON.stringify(data),
              })
                .then((response) => response.json())
                .then((data) => {
                  console.log("Success:", data);
                  if (data.error) this.error = true;
                  else this.error = false;
                  this.result = data.result;
                })
                .catch((error) => {
                  console.error("Error:", error);
                });
            },
          },
        });
      });
    </script>
  </body>
</html>
